[advice]
  statusHints = false

[alias]
  co = checkout
  cb = checkout -b
  glog = log --graph --format=line # graphical log
  prune-remotes = remote prune origin
  st = status --short --branch
  stash-all = stash --all
  # Undo last commit.
  undo = reset --soft HEAD^
  update-submodules = submodule update --init --recursive
  upgrade-submodules = submodule update --init --remote

[core]
  excludesfile = ~/.gitignore_global

[pretty]
  line = %Cred%h%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset %Cgreen%ar

[push]
  default = current

[user]
  name = Justinas Petuchovas
  useConfigOnly = true
