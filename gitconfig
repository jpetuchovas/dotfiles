[advice]
  statusHints = false

[alias]
  aa = add --all
  brdel = branch -D
  co = checkout
  cb = checkout -b
  cm = commit -m
  glog = log --graph --format=line # graphical log
  it = !git init && git commit --allow-empty -m 'Initialize project'
  prune-remotes = remote prune origin
  st = status --short --branch
  stash-all = stash --all
  # Undo last commit.
  undo = reset --soft HEAD^
  update-submodules = submodule update --init --recursive
  upgrade-submodules = submodule update --init --remote

[commit]
  gpgsign = true

[core]
  excludesfile = ~/.gitignore_global

[pretty]
  line = %Cred%h%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset %Cgreen%ar

[push]
  default = current
  followTags = true

[transfer]
  fsckObjects = true

[user]
  name = Justinas Petuchovas
  useConfigOnly = true
