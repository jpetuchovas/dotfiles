{
  "title": "Caps→Ctrl/Esc if alone",
  "maintainers": ["mngyuan"],
  "rules": [
    {
      "description": "Caps→Esc/Ctrl if held",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
