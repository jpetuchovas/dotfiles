set colored-stats
set completion-ignore-case

$if mode=emacs
  # Allow the use of the Insert key.
  "\e[2~": quoted-insert

  # Mappings for Ctrl+left-arrow and Ctrl+right-arrow shortcuts for word moving.
  "\e[1;5C": forward-word
  "\e[1;5D": backward-word
  "\e[5C": forward-word
  "\e[5D": backward-word
  "\e\e[C": forward-word
  "\e\e[D": backward-word
$endif
