{
  "current-date": {
    "prefix": "current-date",
    "description": "Write the current date",
    "body": "$CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE"
  },
  "tags": {
    "prefix": "tgs",
    "description": "Create metadata section with with tags list",
    "body": [
      "---",
      "tags: [$0]",
      "---",
      "",
      ""
    ]
  },
  "title": {
    "prefix": "tl",
    "description": "Generate a title by replacing underscores in the filename with spaces",
    "body": [
      "# ${TM_FILENAME_BASE/[\\._]/ /g}"
    ]
  }
}
